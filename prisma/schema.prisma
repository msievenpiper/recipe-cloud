datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password  String
  recipes   Recipe[]
}

model Recipe {
  id           Int      @id @default(autoincrement())
  title        String
  summary      String? // New field for short summary
  content      String
  author       User     @relation(fields: [authorId], references: [id])
  authorId     String
}
