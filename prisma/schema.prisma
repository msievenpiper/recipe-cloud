datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  password      String
  recipes       Recipe[]
  sharedRecipes SharedRecipe[] @relation("sharedWith")
}

model Recipe {
  id            Int            @id @default(autoincrement())
  title         String
  summary       String?
  content       String
  icon          String?
  author        User           @relation(fields: [authorId], references: [id])
  authorId      String
  sharedWith    SharedRecipe[]
}

model SharedRecipe {
  id        Int      @id @default(autoincrement())
  recipe    Recipe   @relation(fields: [recipeId], references: [id])
  recipeId  Int
  sharedWith User    @relation("sharedWith", fields: [sharedWithId], references: [id])
  sharedWithId String
  createdAt DateTime @default(now())

  @@unique([recipeId, sharedWithId])
}
